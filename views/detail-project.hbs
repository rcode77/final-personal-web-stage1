<!DOCTYPE html>
<html>
  <head>
    <title>Detail Project</title>
    <link rel="stylesheet" href="/public/style.css" />
    <!-- linking bootstrap css cdn -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

    <!-- linking bootstrap js cdn -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand me-5" href="#">
                <img src="/public/assets/logo.png" alt="">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link" href="/add-project">Add Project</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            {{#if isLogin}}
              <li class="nav-item">
                <a
                  class="nav-link active text-black"
                  aria-current="page"
                >Hello, {{users.name}}</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link me-4"
                  aria-current="page"
                  href="/logout"
                >Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link me-2"
                  aria-current="page"
                  href="/register"
                >Register</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link me-4"
                  aria-current="page"
                  href="/login"
                >Login</a>
              </li>
            {{/if}}
          </ul>
                <div class="right-side">
                    <a href="/contact">Contact Me</a>
                </div>
            </div>
    </nav>
    <!-- End Navbar -->

    <!-- Detail Project -->
    <section id="detail-project">
      <div class="container py-md-5">
        <div class="row">
          <div class="col text-center">
            <h2 class="fw-bold">{{project.projectName}}</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-7 py-md-5">
            <div class="container">
              <div class="col">
                <img style="width: 100%; height:400px" src="/uploads/{{project.image}}" alt="">
              </div>
            </div>
          </div>
          <div class="col-md-5 py-md-5">
            <div class="row">
              <div class="col">
                <div class="container">
                  <div class="col">
                    <label for="description" class="form-label fs-5 fw-bold">Description</label>
                      <div class="row">
                        <div class="col-md-1">
                            <a href="" class="me-md-3 text-black fs-4"><i class="far fa-calendar-alt"></i></a> 
                        </div>
                        <div class="col mt-2">
                          <p>{{project.startDate}} - {{project.endDate}}</p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-1">
                            <a href="" class="me-md-3 text-black fs-4"><i class="far fa-clock"></i></a> 
                        </div>
                        <div class="col mt-2">
                          <p>{{detail.duration}}</p>
                        </div>
                      </div>
                  </div>

                  <div class="col mt-md-4">
                    <label for="Technologies" class="form-label fs-5 fw-bold">Technologies</label>
                    <div class="row">
                      <div class="col">
                        <div class="row">
                          <div class="col-md-1">
                            <img class="me-md-3 my-md-4" src="/public/assets/{{detail.check1}}" alt="" style="width: 50px ;"> 
                          </div>
                        </div>
                      <div class="row">
                        <div class="col-md-1">
                            <img class="me-md-3" src="/public/assets/{{detail.check2}}" alt="" style="width: 50px ;">
                        </div>
                      </div>
                    </div>
                    <div class="col">
                      <div class="row">
                        <div class="col-md-1">
                            <img class="me-md-3 my-md-4" src="/public/assets/{{detail.check3}}" alt="" style="width: 50px ;"> 
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-1">
                            <img class="me-md-3" src="/public/assets/{{detail.check4}}" alt="" style="width: 50px ;"> 
                        </div>
                      </div>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <p>{{project.description}}</p>
          </div>
        </div>
      </div>
    </section>
    <!-- End Detail Project -->
  </body>
</html>
