<!DOCTYPE html>
<html>
  <head>
    <title>Update Project</title>
    <link rel="stylesheet" href="/public/style.css">
    <!-- linking bootstrap css cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- linking bootstrap js cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
  </head>
  <body>
      <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand me-5" href="#">
                <img src="/public/assets/logo.png" alt="">
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link" href="/add-project">Add Project</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            {{#if isLogin}}
              <li class="nav-item">
                <a
                  class="nav-link active text-black"
                  aria-current="page"
                >Hello, {{users.name}}</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link me-4"
                  aria-current="page"
                  href="/logout"
                >Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link me-2"
                  aria-current="page"
                  href="/register"
                >Register</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link me-4"
                  aria-current="page"
                  href="/login"
                >Login</a>
              </li>
            {{/if}}
          </ul>
                <div class="right-side">
                    <a href="/contact">Contact Me</a>
                </div>
            </div>
    </nav>
    <!-- End Navbar -->

    <!-- Add Project -->
    <section id="update-project">
        <div class="container py-md-5">
            <div class="row">
                <div class="col text-center">
                    <h2 class="fw-bold">UPDATE MY PROJECT</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form action="/update-project/{{project.id}}" method="POST" enctype="multipart/form-data">
                        <div class="my-3">
                          <label for="project-name" class="form-label fs-5 fw-bold">Project Name</label>
                          <input type="text" name="projectName" class="form-control" id="project-name" value="{{project.projectName}}">
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label for="start-date" class="form-label fs-5 fw-bold">Start Date</label>
                                <input type="date" name="startDate" class="form-control" id="start-date">
                            </div>
                            <div class="col">
                                <label for="end-date" class="form-label fs-5 fw-bold">End Date</label>
                                <input type="date" name="endDate" class="form-control" id="end-date">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label fs-5 fw-bold">Description</label>
                            <textarea class="form-control" name="description" style="resize: none" id="description" rows="5">{{project.description}}</textarea>
                        </div>

                        <div class="row">
                            <label for="technologies" class="form-label fs-5 fw-bold">Technologies</label>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" name="check" value="Node-JS.png">
                                    <label class="form-check-label fw-bold check-label" for="check">Node Js</label>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" name="check" value="React-JS.png">
                                    <label class="form-check-label fw-bold check-label" for="check">React Js</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" name="check" value="Next-JS.png">
                                    <label class="form-check-label fw-bold check-label" for="check">Next Js</label>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" name="check" value="TypeScript.png">
                                    <label class="form-check-label fw-bold check-label" for="check">TypeScript</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label for="file-upload" class="form-label fs-5 fw-bold">Upload Image</label>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="input-group mb-3">
                                    <input type="file" class="form-control" name="upload" id="file-upload">
                                    <label class="input-group-text" for="file-upload">
                                        <img src="/public/assets/file.png" alt="">
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col submit-container">
                            <button type="submit" class="btn-submit">Submit</button>
                        </div>
                        
                      </form>
                </div>
            </div>
        </div>
    </section>
    <!-- End of Add Project -->
  </body>
</html>
